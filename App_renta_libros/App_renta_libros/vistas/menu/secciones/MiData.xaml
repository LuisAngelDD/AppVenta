<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_renta_libros.vistas.menu.secciones.MiData">
    <ContentPage.Content>
        <StackLayout Padding="40, 0, 40, 0"
                     Margin="10"
                     VerticalOptions="CenterAndExpand"
                     Spacing="10"
                     Orientation="Vertical">
            <Image Source="user.png"
                   HeightRequest="50"
                   WidthRequest="50"
                   HorizontalOptions="Center" />
            <StackLayout Padding="0, 100, 0, 0" Orientation="Horizontal">
                <Label Text="Usuario:"
                       FontSize="Medium" />
                <Label Text="user"
                       FontSize="Medium"
                       HorizontalTextAlignment="Center"
                       x:Name="user" />
            </StackLayout>
            <Button Margin="50,20,50,0"
                    BackgroundColor="Black"
                    TextColor="White"
                    Text="Cerrar sesion"
                    Clicked="close"
                    CornerRadius="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>